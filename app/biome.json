{
    "$schema": "https://biomejs.dev/schemas/2.3.10/schema.json",

    "vcs": {
        "enabled": true,
        "clientKind": "git",
        "useIgnoreFile": true
    },

    "files": {
        "ignoreUnknown": true
    },

    "formatter": {
        "enabled": true,
        "indentStyle": "space",
        "indentWidth": 4,
        "lineWidth": 100
    },

    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true,
            "correctness": {
                "noUnusedVariables": {
                    "level": "error"
                }
            }
        }
    },

    "javascript": {
        "formatter": {
            "quoteStyle": "double"
        }
    },

    "assist": {
        "enabled": false,
        "actions": {
            "source": {
                "organizeImports": "on"
            }
        }
    }

    
}
